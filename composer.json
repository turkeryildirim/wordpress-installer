{
    "name": "turker/wordpress-installer",
    "description": "Composer Based Installer for WordPress",
    "type": "package",
    "license": "MIT",
    "authors": [
        {
            "name": "TÃ¼rker YILDIRIM",
            "email": "me@turkeryildirim.com"
        }
    ],
    "keywords": ["wordpress"],
    "prefer-stable": true,
    "config": {
        "sort-packages": true
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://wpackagist.org"
        }
    ],
    "extra": {
        "installer-paths": {
            "app/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
            "app/plugins/{$name}/": ["type:wordpress-plugin"],
            "app/themes/{$name}/": ["type:wordpress-theme"]
        },
        "wordpress-install-dir": "wordpress"
    },
    "require": {
        "php": ">=7.1",
        "composer/installers": "^1.6",
        "johnpbloch/wordpress": "^5.1"
    },
    "require-dev": {
        "dealerdirect/phpcodesniffer-composer-installer": "^0.5.0",
        "phpcompatibility/phpcompatibility-wp": "^2.0",
        "phpunit/phpunit": "^7.5",
        "squizlabs/php_codesniffer": "^3.4",
        "symfony/thanks": "^1.1",
        "wp-coding-standards/wpcs": "^2.0",
        "wpackagist-plugin/theme-check": "20190208.1",
        "wpackagist-theme/twentynineteen": "^1.3"
    },
    "scripts": {
        "check-cs": [
            "@php ./vendor/bin/phpcs"   
        ],
        "fix-cs": [
            "@php ./vendor/bin/phpcbf"
        ]
    }
}
